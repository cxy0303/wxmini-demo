/* pages/map/index/index.wxss */

page {
  height: 100%;
}

.location-map {
  height: 100%;
  width: 100%;
}

.location-map-bar {
  position: fixed;
  bottom: 0px;
  left: 0px;
  width: 100%;
  height: 64px;
  z-index: 100;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: white;
}

.location-map-bar view {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.location-map-bar view image {
  width: 25px;
  height: 25px;
}

.location-map-bar view p {
  font-size: 12px;
}

.location-map-bar .active p {
  color: #3347d1;
}
