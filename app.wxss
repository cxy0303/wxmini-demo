/**app.wxss**/

page {
  background: rgba(248, 248, 248, 1);
  box-sizing: border-box;
  padding-bottom: 50px;
  /* height: 100%;
  overflow: auto; */
}

.font-primary {
  color: #1989fa;
}

.font-color1 {
  color: #303133;
}

.font-color2 {
  color: #606266;
}

.font-color3 {
  color: #909399;
}

.font-color4 {
  color: #c0c4cc;
}

.border-color1 {
  border-color: #dcdfe6;
}

.border-color2 {
  border-color: #e4e7ed;
}

.border-color3 {
  border-color: #ebeef5;
}

.border-color4 {
  border-color: #f2f6fc;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

.flex-align-center {
  align-items: center;
}

.flex-just-content-center {
  justify-content: center;
}

.d-flex {
  display: flex;
}

.text-center {
  text-align: center;
}

.popup-item {
  flex: 1;
  display: flex;
  width: 100%;
  padding: 13px 5px;
  box-sizing: border-box;
  border-bottom: 1px solid #eee;
}

.popup-item .van-checkbox {
  width: 50px;
  flex: none;
}

.popup-item p {
  flex: 1;
}

.popup-foot {
  border-top: 5px solid #eee;
  display: flex;
  padding: 13px 5px;
}

.popup-foot view {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.popup-foot view:first-child {
  border-right: 1px solid #eee;
}

.popup-foot .sure {
  color: blue;
}
