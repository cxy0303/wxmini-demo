/* components/pages/common/picView/index.wxss */
.picview {
  position: fixed;
  top: 0px;
  left: 0px;
  width: 100%;
  height: 100%;
}

.picview movable-view {
  background-color: white;
  top: calc(50% - 120px);
  width: 100vw;
  height: 240px;
}

.picview movable-view image {
  width: 100%;
  height: 100%;
}

.picview .overlay {
  position: absolute;
  top: 0px;
  left: 0px;
  width: 100%;
  height: 100%;
  background: black;
}
