.search-bar {
  width: 100%;
  height: 36px;
  background: rgba(245, 245, 245, 1);
  border-radius: 18px;
  position: relative;
  padding-left: 36px;
  padding-right: 36px;
  box-sizing: border-box;
}

.search-bar input {
  width: 100%;
  height: 100%;
  font-size: 13px;
}

.search-bar .search-icon {
  position: absolute;
  top: 6px;
  left: 6px;
  width: 24px;
  height: 24px;
}

.search-bar .search-close {
  position: absolute;
  right: 0px;
  top: 0px;
  width: 36px;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1;
}

.search-bar .search-close image {
  width: 14px;
  height: 14px;
}
