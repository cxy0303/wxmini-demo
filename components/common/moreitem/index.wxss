/* components/common/moreitem/index.wxss */

.more-item-container {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}

.more-item-container .more-item-group p {
  display: flex;
}

.more-item-container .more-item-group p span {
  flex: auto;
  width: 0;
  display: inline-block;
  padding: 10px;
}

.more-item-container .more-item-group p span:first-child {
  font-size: 15px;
  font-weight: bolder;
  text-align: left;
}

.more-item-container .more-item-group p span:last-child {
  font-size: 12px;
  text-align: right;
}

.more-item-container .more-item-group p label {
  flex: 1;
}

.more-item-container .more-item-group .more-items {
  padding: 5px;
}

.more-item-container .more-item-group .more-items a {
  display: inline-block;
  background-color: #eee;
  border-radius: 5px;
  padding: 5px 8px;
  color: #333;
  margin: 5px;
  min-width: 60px;
  text-align: center;
}

.more-item-container .more-item-group .more-items a.active {
  background-color: #1989fa;
  color: white;
}
