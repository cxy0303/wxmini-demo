/* components/pages/shop/apartment/main/index.wxss */

.apartment {
  box-sizing: border-box;
  padding-bottom: 54px;
}

.apartment swiper {
  width: 100%;
}

.apartment swiper .slide-image {
  width: 100%;
  height: 331rpx;
}

.apartment .header {
  background-color: white;
  position: relative;
  border-bottom: 1px solid #eee;
  border-top: 1px solid #eee;
}

.apartment .header .title {
  font-size: 20px;
  font-weight: bolder;
  color: #333;
  padding: 10px;
  padding-right: 60px;
}

.apartment .header .title span {
  font-size: 14px;
  font-weight: normal;
  color: #3347d1;
}

.apartment .header .title label {
  position: absolute;
  right: 10px;
  top: 15px;
  background: #999;
  font-size: 12px;
  font-weight: normal;
  padding: 1px 3px;
  color: white;
  border-radius: 2px;
}

.apartment .header .title label.active {
  background-color: #d14e33;
}

.apartment .header .info {
  padding: 10px;
}

.apartment .header .info-item {
  display: flex;
  font-size: 14px;
  margin-bottom: 5px;
}

.apartment .header .info-item label {
  color: #999;
}

.apartment .header .info-item span {
  color: #333;
}

.apartment  .bar {
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: 1px solid #eee;
  background-color: white;
}

.apartment  .bar a {
  flex: 1;
  text-align: center;
  padding: 10px;
  font-size: 14px;
  color: #3347d1;
}

.apartment  .bar a image {
  width: 15px;
  height: 15px;
  vertical-align: middle;
  margin-right: 5px;
}

.apartment .else {
  padding: 10px;
  background-color: white;
}

.apartment .else p {
  font-size: 15px;
  font-weight: bolder;
  color: #333;
}

.apartment movable-area {
  position: fixed;
  top: 0px;
  left: 0px;
  width: 100%;
  height: 100%;
}

.apartment movable-area movable-view {
  background-color: white;
  top: calc(50% - 120px);
  width: 100vw;
  height: 480rpx;
}

.apartment movable-area movable-view image {
  width: 100%;
  height: 100%;
}

.apartment movable-area .overlay {
  position: absolute;
  top: 0px;
  left: 0px;
  width: 100%;
  height: 100%;
  background: black;
}
