.detail_report {
  background-color: white;
  box-sizing: border-box;
  padding-top: 20px;
  padding-bottom: 64px;
}

.detail_report .num {
  display: inline-flex;
  width: 15px;
  height: 15px;
  border-radius: 50%;
  background-color: #3347d1;
  color: white;
  font-size: 12px;
  align-items: center;
  justify-content: center;
  margin-left: 5px;
}

.detail_report .high {
  font-weight: bolder;
  font-size: 16px;
}

.detail_report .border-bottom {
  border-bottom: 1px solid #ddd;
}

.detail_report .form {
  padding: 5px;
  box-sizing: border-box;
}

.detail_report .form-item {
  display: flex;
  width: 100%;
  align-items: stretch;
  box-sizing: border-box;
  position: relative;
}

.detail_report .form-item {
  padding: 10px 0px;
}

.detail_report .input-item {
  padding-top: 0px;
  padding-bottom: 10px;
  margin-bottom: 10px;
}

.detail_report .form-item span {
  flex: none;
  width: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: red;
  height: 100%;
  text-align: center;
}

.detail_report .form-item label {
  font-size: 14px;
  color: #666;
}

.detail_report .form-item a {
  flex: 1;
  text-align: right;
  color: #666;
  font-size: 15px;
  padding-right: 20px;
}

.detail_report .form-item a::after {
  border: solid 2px #c8c8cd;
  border-bottom-width: 0;
  border-left-width: 0;
  content: " ";
  top: 50%;
  right: 10px;
  position: absolute;
  width: 5px;
  height: 5px;
  -webkit-transform: translateY(-50%) rotate(45deg);
  transform: translateY(-50%) rotate(45deg);
}

.detail_report .form-item .flex-box {
  display: flex;
  justify-content: center;
  width: 100%;
}

.detail_report .form-item .flex-box input {
  flex: 1;
}

.detail_report .custome-phone {
  width: 100%;
}

.detail_report .custome-phone label {
  flex: 1;
}

.detail_report .custome-phone view {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.detail_report .custome-phone view div {
  font-size: 13px;
  color: #ddd;
}

.detail_report .custome-phone .ishidden div {
  color: #3347d1;
}

.detail_report .custome-phone view van-switch {
  margin-right: 5px;
}

.detail_report .form-item van-radio-group {
  flex: 1;
  display: flex;
  justify-content: flex-end;
}

.detail_report .form-item van-radio-group van-radio {
  margin-right: 10px;
}

.detail_report .group-item {
  background-color: rgba(94, 109, 228, 0.4497);
  color: white;
  padding: 8px 10px;
  font-size: 12px;
  margin: 5px 0px;
}

.detail_report .cell {
  background-color: #eee;
  padding-left: 5px;
  margin-top: 20px;
}

.detail_report .form-item textarea {
  border: 1px solid #ddd;
  flex: 1;
  padding: 2px 5px;
  font-size: 14px;
}

.detail_report .submit {
  vertical-align: middle;
  width: 100%;
  position: fixed;
  z-index: 100;
  bottom: 0px;
  left: 0px;
  background-color: white;
  text-align: center;
  font-weight: bolder;
  border: none;
  font-size: 15px;
  padding: 10px;
  box-sizing: border-box;
  border-top: 1px solid #ddd;
}

.detail_report .submit button {
  color: white;
  border-top: 1px solid #ddd;
  background: linear-gradient(90deg, rgba(90, 143, 253, 1) 0%, rgba(44, 103, 224, 1) 100%);
  border-radius: 4px;
}

.detail_report .cutome-phone-input {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  border-right: 1px solid #ddd;
  position: relative;
}

.detail_report .cutome-phone-input input {
  position: absolute;
  top: 0px;
  left: 0px;
  visibility: hidden;
  width: 0px;
  height: 0px;
}

.detail_report .cutome-phone-input label {
  flex: 1;
  height: 30px;
  border: 1px solid #ddd;
  border-right: none;
  text-align: center;
  position: relative;
  align-items: center;
  justify-content: center;
  display: flex;
  font-size: 16px;
  font-weight: bolder;
  color: #3347d1;
}

.detail_report .cutome-phone-input .active::before {
  content: ' ';
  position: absolute;
  top: -1px;
  left: -1px;
  width: 100%;
  height: 100%;
  border: 1px solid #3347d1;
  border-radius: 2px;
  z-index: 1;
}

.detail_report .cutome-phone-input .active::after {
  content: '——';
  position: absolute;
  bottom: -9px;
  left: 0px;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: green;
  animation: flash 1s ease-in infinite;
  font-size: 10px;
}

.detail_report .cutome-phone-input .disabled {
  background-color: #eee;
}

.detail_report .cutome-phone-input .disabled::before {
  content: '';
  border: none !important;
}

.detail_report .cutome-phone-input .disabled::after {
  content: '*' !important;
  color: #c8c8cd;
  animation: none !important;
  border: none !important;
  position: absolute;
  left: 0px;
  top: 0px;
  width: 100%;
  height: 100%;
  z-index: 1;
  background-color: #eee;
  display: flex;
  align-items: center;
  justify-content: center;
}

@keyframes flash {
  from {
    opacity: 1;
  }

  to {
    opacity: 0;
  }
}
