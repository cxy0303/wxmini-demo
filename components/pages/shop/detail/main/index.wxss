.shop-detail {
  width: 100%;
}

.shop-detail .border-bottom {
  border-bottom: 1px solid #d8d8d8;
}

.shop-detail .silder {
  width: 100%;
  position: relative;
}

.shop-detail .silder swiper {
  height: 450rpx;
}

.shop-detail .silder .slide-image {
  height: 100%;
  width: 100%;
}

.shop-detail .back {
  width: 30px;
  height: 30px;
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  z-index: 1;
}

.shop-detail  .back  image {
  width: 20px;
  height: 20px;
}

.shop-detail .silder .imgcount {
  position: absolute;
  right: 10px;
  bottom: 10px;
  font-size: 10px;
  color: white;
  display: inline-block;
  width: 44px;
  height: 15px;
  text-align: center;
}

.shop-detail .silder .imgcount::before {
  content: ' ';
  position: absolute;
  top: 0px;
  left: 0px;
  width: 100%;
  height: 100%;
  background-color: black;
  opacity: 0.7;
  border-radius: 10px;
}

.shop-detail .silder .imgcount span {
  position: relative;
  z-index: 2;
}

.shop-detail .content {
  padding: 0px 8px;
  box-sizing: border-box;
}

.shop-detail .content .name .container {
  padding-top: 20px;
  font-size: 20px;
  color: #333;
  font-weight: bold;
  border-bottom: 1px solid #d8d8d8;
  padding-bottom: 10px;
}

.shop-detail .content .name .container span {
  font-size: 10px;
  margin-left: 5px;
  font-weight: normal;
}

.shop-detail .content .name .container label {
  background-color: #d14e33;
  color: white;
  font-size: 10px;
  font-weight: normal;
  float: right;
  padding: 1px 5px;
  border-radius: 2px;
  margin-top: 8px;
}

.shop-detail .blue {
  color: #3347d1;
}

.shop-detail .red {
  color: #d14e33;
}

.shop-detail .yellow {
  color: #d19b33;
}

.shop-detail .content .prices {
  width: 100%;
}

.shop-detail .content .prices .price-item {
  border-bottom: 1px solid #d8d8d8;
  display: flex;
  align-content: center;
  justify-content: center;
  padding: 10px 0px;
  width: 100%;
}

.shop-detail .content .prices .price-item .price-item-cell {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  flex: 1;
}

.shop-detail .content .prices .price-item .price-item-cell span {
  flex: 1;
  font-size: 12px;
  color: #999;
}

.shop-detail .content .prices .price-item .price-item-cell label {
  flex: 1;
  font-size: 14px;
  font-weight: bolder;
  margin-top: 5px;
}

.shop-detail .content .detail {
  width: 100%;
  padding-top: 20px;
  padding-bottom: 0px;
  border-bottom: 1px solid #d8d8d8;
}

.shop-detail .content .detail .detail-item {
  display: flex;
  color: #999;
  padding-bottom: 5px;
}

.shop-detail .content .detail .detail-item span {
  font-size: 14px;
  width: 70px;
  text-align-last: justify;
}

.shop-detail .content .detail .detail-item p {
  color: #333;
  font-size: 14px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  padding-left: 5px;
  font-weight: bolder;
}

.shop-detail .content .detail .detail-tag {
  margin-left: -5px;
  margin-right: -5px;
  display: flex;
  flex-wrap: wrap;
  margin-top: 10px;
}

.shop-detail .content .detail  .detail-tag a {
  font-size: 10px;
  color: #999;
  border: 1px solid #999;
  padding: 1px 5px;
  margin: 0px 5px;
  margin-bottom: 5px;
}

.shop-detail .content .detail  .detail-more {
  text-align: center;
  font-size: 12px;
  font-weight: bolder;
  color: #d14e33;
  padding: 10px 0px;
}

.shop-detail .content .toolbar {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  padding: 10px 0px;
  border-bottom: 1px solid #d8d8d8;
}

.shop-detail .content .toolbar view {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 14px;
  color: #3347d1;
  font-weight: bolder;
}

.shop-detail .content .toolbar view image {
  width: 15px;
  height: 15px;
  margin-right: 5px;
}

.shop-detail .content .content-block {
  padding: 10px 0px;
}

.shop-detail .content .content-block .header {
  color: #333;
  font-size: 15px;
  font-weight: bolder;
  padding-top: 20px;
  border-bottom: 1px solid #d8d8d8;
  padding-bottom: 10px;
}

.shop-detail .content .content-block .header a {
  font-size: 12px;
  color: #666;
  float: right;
}

.shop-detail .content .content-block .header .bdage {
  background-color: #d14e33;
  border-radius: 9px;
  display: inline-block;
  width: 24px;
  height: 14px;
  color: white;
  text-align: center;
  font-size: 12px;
  font-weight: normal;
  line-height: 14px;
  vertical-align: middle;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.shop-detail .content .content-block .subject {
  font-size: 14px;
  font-weight: bolder;
  color: #333;
  padding: 10px 0px;
  display: flex;
  width: 100%;
  padding-top: 15px;
}

.shop-detail .content .content-block .subject view {
  flex: 1;
}

.shop-detail .content .content-block .subject span {
  color: #d14e33;
}

.shop-detail .content .content-block .subject a {
  width: 45px;
  color: #e45eca;
  font-size: 10px;
  border: 1px solid #e45eca;
  height: 18px;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0px 5px;
}

.shop-detail .content .content-block image {
  width: 100%;
  height: 288rpx;
  background-color: #d8d8d8;
}

.shop-detail .content .content-block .remark {
  font-size: 12px;
  color: #999;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 5px;
}

.shop-detail .content .content-block .remark span {
  margin-right: 10px;
}

.shop-detail .content .content-block .remark .btn {
  font-size: 10px;
  color: white;
  background-color: #d14e33;
  float: right;
  padding: 2px 5px;
  border-radius: 3px;
}

.shop-detail .content .content-block .msg-item {
  padding: 5px 0px;
  display: flex;
}

.shop-detail .content .content-block .msg-item image {
  width: 79px;
  height: 79px;
  flex-shrink: 0;
}

.shop-detail .content .content-block .msg-item .msg-item-content {
  font-size: 12px;
  color: #999;
  padding-left: 8px;
}

.shop-detail .content .content-block .subrice {
  height: 30px;
  width: 100%;
  background-color: #f0f0f0;
  color: #3347d1;
  font-size: 12px;
  border: none;
  margin-top: 20px;
  font-weight: bolder;
  border-radius: 5px;
  display: flex;
  justify-content: center;
  align-items: center;
}
