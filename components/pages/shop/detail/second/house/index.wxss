/* components/pages/shop/detail/second/house/index.wxss */

.house-detail swiper {
  height: 510rpx;
  box-sizing: border-box;
}

.house-detail swiper swiper-item {
  width: 100%;
  height: 100%;
}

.house-detail swiper swiper-item image {
  width: 100%;
  height: 100%;
}

.house-detail .subject {
  font-size: 22px;
  font-weight: bolder;
  color: rgba(51, 51, 51, 1);
  width: 100%;
  text-align: left;
}

.house-detail .box {
  background-color: white;
  padding: 10px;
  box-sizing: border-box;
  margin-top: 10px;
}

.house-detail .box-top {
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
  margin-top: 0px;
  position: relative;
  z-index: 1;
}

.house-detail .subtitle {
  font-size: 13px;
  color: rgba(153, 153, 153, 1);
  margin-top: 10px;
  margin-bottom: 20px;
}

.house-detail .flex-row {
  display: flex;
  width: 100%;
}

.house-detail .flex-row a {
  flex: 1;
  font-size: 13px;
  color: rgba(51, 51, 51, 1);
  line-height: 19px;
}

.house-detail .price {
  margin-top: 10px;
}

.house-detail .price a {
  font-size: 15px;
  font-weight: bolder;
  color: rgba(247, 61, 61, 1);
}

.house-detail .news {
  padding: 10px;
  align-items: center;
  justify-content: center;
  background: rgba(249, 249, 249, 1);
  margin: 20px 0px;
  box-sizing: border-box;
}

.house-detail .news image {
  width: 56rpx;
  height: 56rpx;
  flex: none;
}

.house-detail .news p {
  flex: 1;
  padding-left: 10px;
  font-size: 13px;
  color: rgba(51, 51, 51, 1);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.house-detail .news a {
  width: auto;
  flex: none;
  text-align: center;
  padding: 0px 10px;
  font-size: 13px;
  color: rgba(102, 102, 102, 1);
}

.house-detail .grid {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 10px;
}

.house-detail .grid label {
  width: 80px;
  text-align: justify;
  font-size: 15px;
  color: rgba(153, 153, 153, 1);
}

.house-detail .grid span {
  flex: 1;
  font-size: 15px;
  color: rgba(51, 51, 51, 1);
  text-align: left;
}

.house-detail .grid:last-child span {
  text-align: left;
}

.house-detail .grid  a {
  padding: 8px 15px;
  background: rgba(249, 249, 249, 1);
  color: rgba(51, 51, 51, 1);
  font-size: 12px;
  margin: 5px;
  border-radius: 3px;
}

.house-detail .area image {
  height: 296rpx;
  width: 100%;
  margin: 10px 0px;
}

.house-detail  .subsubject {
  font-size: 16px;
  color: rgba(51, 51, 51, 1);
  font-weight: bolder;
}

.house-detail .steps .step {
  padding-left: 50px;
  position: relative;
  margin: 10px 0px;
}

.house-detail .steps .step::before {
  content: ' ';
  position: absolute;
  top: 15px;
  left: 15px;
  width: 10px;
  height: 10px;
  border-radius: 20px;
  background-color: #2f71f6;
  z-index: 1;
}

.house-detail .steps .step::after {
  content: ' ';
  position: absolute;
  top: 50%;
  left: 19px;
  width: 1px;
  height: 50%;
  border-radius: 20px;
  background-color: rgba(153, 153, 153, 1);
}

.house-detail .steps .step view:first-child {
  font-size: 16px;
  font-weight: bolder;
  color: rgba(51, 51, 51, 1);
}

.house-detail .steps .step view:last-child {
  font-size: 13px;
  color: rgba(153, 153, 153, 1);
}

.house-detail .card {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.house-detail .card .logo {
  width: 108rpx;
  height: 108rpx;
  margin: 20px 10px;
  border-radius: 108rpx;
}

.house-detail .card .flex-row image {
  width: 22px;
  height: 17px;
  margin-right: 5px;
}

.house-detail .card p {
  color: rgba(51, 51, 51, 1);
  font-size: 18px;
  font-weight: bolder;
}

.house-detail .card .flex-row {
  margin: 5px 0px;
}

.house-detail .card .flex-row view {
  display: flex;
  flex: 1;
  align-items: center;
  color: rgba(47, 113, 246, 1);
  font-size: 12px;
}

.house-detail .card div {
  font-size: 14px;
  color: rgba(153, 153, 153, 1);
}

.house-detail .card .right {
  flex: 1;
}

.house-detail .desc {
  border-top: 1px solid rgba(229, 229, 229, 1);
  border-bottom: 1px solid rgba(229, 229, 229, 1);
  padding: 20px 0px;
}

.house-detail .desc p {
  margin-bottom: 5px;
}

.house-detail .desc view {
  font-size: 15px;
  color: rgba(102, 102, 102, 1);
  margin-bottom: 10px;
}

.house-detail .more {
  display: flex;
  align-items: center;
  justify-content: center;
  color: rgba(102, 102, 102, 1);
  font-size: 13px;
  padding: 10px;
  padding-bottom: 5px;
  padding-top: 15px;
}
