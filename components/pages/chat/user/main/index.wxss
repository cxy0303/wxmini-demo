/* components/pages/chat/user/main/index.wxss */

.message {
  width: 100%;
  height: 100vh;
  padding-bottom: 64px;
  box-sizing: border-box;
}

.message .time {
  font-size: 12px;
  color: #333;
  text-align: center;
  padding: 10px 0px;
}

.message-bottom {
  position: fixed;
  bottom: -110rpx;
  left: 0px;
  width: 100%;
  height: auto;
  background-color: white;
  box-sizing: border-box;
  transition: transform 0.3s ease;
}

.message-bottom .flex-box {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 110rpx;
  padding: 20rpx;
  box-sizing: border-box;
}

.message-bottom .flex-box input {
  height: 100%;
  border: 1px solid #ddd;
  border-radius: 2px;
  flex: 1;
  padding: 2px 5px;
  margin-right: 10px;
}

.message-bottom .menu van-icon {
  flex: 1;
  text-align: center;
}

.showbottom {
  transform: translateY(-110rpx);
}

.message .message-item {
  display: flex;
  padding: 10px;
}

.message .reverse {
  flex-direction: row-reverse;
}

.message .reverse .content {
  margin-left: 0px;
  margin-right: 10px;
  background-color: green !important;
  color: white !important;
}

.message .message-item image {
  width: 32px;
  height: 32px;
  flex: none;
}

.message .message-item .content {
  font-size: 13px;
  color: #333;
  padding: 5px;
  background-color: white;
  border-radius: 4px 0 4px 4px;
  margin-left: 10px;
}

.message .message-item .content image {
  width: 200rpx;
  height: 200rpx;
}
