.tab-bar {
  height: 64px;
  background: white;
  display: flex;
  width: 100%;
  align-items: center;
  justify-content: space-evenly;
  transform: translateY(100px);
}

.tab-bar-show {
  transform: translateY(0px) !important;
}

.tab-bar-border {
  background-color: #e5e5e5;
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 1px;
  transform: scaleY(0.5);
}

.tab-bar-item {
  flex: auto;
  text-align: center;
  max-width: 130px;
}

.tab-bar-item button {
  border: none;
  border-radius: 4px;
  font-size: 16px;
  color: white;
  height: 44px;
  line-height: 44px;
  vertical-align: middle;
}

.tab-bar-item-text {
  color: #666;
  font-size: 12px;
}

.tab-bar .chat {
  max-width: 55px;
  position: relative;
}

.tab-bar .chat image {
  width: 22px;
  height: 22px;
}

.tab-bar .chat .badge {
  min-width: 13px;
  min-height: 13px;
  display: flex;
  align-items: center;
  justify-content: center;
  padding:0px 2px;
  border-radius: 13px;
  background-color: red;
  color: white;
  position: absolute;
  right: 9px;
  top: -3px;
  font-size: 10px;
  z-index: 1;
}

.tab-bar .main button {
  background: linear-gradient(90deg, rgba(251, 134, 141, 1) 0%, rgba(253, 91, 99, 1) 100%);
}

.tab-bar .house button {
  background: linear-gradient(90deg, rgba(90, 143, 253, 1) 0%, rgba(44, 103, 224, 1) 100%);
}
